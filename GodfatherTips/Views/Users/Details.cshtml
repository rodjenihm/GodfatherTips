@using GodfatherTips.Utilities
@model ApplicationUser

@{
    ViewData["Title"] = "Detalji";
}

<div class="text-center justify-content-center">
    <hr />
    <table class="table table-hover table-striped table-sm">
        <thead>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Vreme registracije:</th>
                <td>@Model.RegistrationDate</td>
            </tr>
            <tr>
                <th scope="row">Email:</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th scope="row">Korisničko ime:</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th scope="row">Nadimak:</th>
                <td>@Model.Nickname</td>
            </tr>
            <tr>
                <th scope="row">Status:</th>
                @if (Model.Role == Role.Member)
                {
                    <td>Standardan korisnik</td>
                }
                else if (Model.Role == Role.Vip)
                {
                    <td>VIP (do @Model.VipMembershipExpirationDate)</td>
                }
                else
                {
                    <td>Admin</td>
                }
            </tr>
        </tbody>
    </table>
    <div>
        @*<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |*@
        <a asp-action="Index">Nazad na listu</a>
    </div>
</div>

