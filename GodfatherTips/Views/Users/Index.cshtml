@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Korisnici";
}

<div class="text-center justify-content-center">
    <table class="table table-striped table-hover table-sm my-2">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Nadimak</th>
                <th scope="col">VIP</th>
                <th scope="col">VIP ističe</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row"><a asp-action="Details" asp-route-id="@user.Id">@user.Email</a></th>
                    <td>@user.Nickname</td>

                    @if (!user.IsVipMember)
                    {
                        <td>Ne</td>
                        <td>-</td>
                        <td><a asp-controller="Users" asp-action="Promote" asp-route-id="@user.Id">Dodeli VIP</a></td>
                    }
                    else
                    {
                        <td>De</td>
                        <td>@user.VipMembershipExpirationDate</td>
                        <td>-</td>
                    }

                </tr>
            }
        </tbody>
    </table>
</div>