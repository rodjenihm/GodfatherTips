@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@model ApplicationUser
@{
    ViewData["Title"] = "Početna";
}


<div class="text-center justify-content-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <h1>Dobrodošli @Model.Nickname!</h1>
        <h4>Želimo vam ugodan boravak na sajtu.</h4>
    }
    else
    {
        <h1 class="display-4">Dobrodošli na GodfatherTips!</h1>
        <h5>Prijavite se kako biste pristupili sadržajima sajta.</h5>
        <h5>Ukoliko nemate nalog možete registrovati novi potpuno besplatno. Potrebna vam je samo validna email adresa.</h5>
        <h5>Nakon registracije potrebno je verifikovati nalog putem linka koji ćete dobiti na email.</h5>
    }
</div>